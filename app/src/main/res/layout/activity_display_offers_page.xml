<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/full_listing_linear_layout"
    android:background="#4A5DB4">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="TITLE"
        android:id="@+id/itemTitle"
        android:layout_marginTop="42dp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/photo_display"
        android:layout_toEndOf="@+id/photo_display" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="PRICE"
        android:id="@+id/itemPrice"
        android:paddingRight="30dp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_below="@+id/itemTitle"
        android:layout_toRightOf="@+id/textView2"
        android:layout_toEndOf="@+id/textView2" />

    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:id="@+id/photo_display"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#4A5DB4" />



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Description"
        android:id="@+id/itemDescription"
        android:textStyle="bold"
        android:textSize="15dp"
        android:textColor="#FFFFFF"
        android:layout_toRightOf="@+id/photo_display"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/photo_display"
        android:layout_below="@+id/textView2" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/itemDescription"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:id="@+id/show_offers_on_item"></ListView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No Offers On This Item"
        android:textStyle="italic|bold"
        android:id="@+id/offers_none"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/itemDescription"
        android:visibility="gone"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="$"
        android:id="@+id/textView2"
        android:textSize="23dp"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:layout_alignBaseline="@+id/itemPrice"
        android:layout_alignBottom="@+id/itemPrice"
        android:layout_toRightOf="@+id/photo_display"
        android:layout_toEndOf="@+id/photo_display" />


</RelativeLayout>
